{
  "name": "mist-react",
  "version": "1.0.1",
  "description": "the shell app for mist-ui-react",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare-release": "node ./scripts/copyApp.js",
    "build": "build",
    "release": "env-cmd .env build"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@philipplgh/electron-app-updater": "^1.0.3"
  },
  "devDependencies": {
    "electron": "^3.0.2",
    "electron-builder": "20.28.0",
    "env-cmd": "^8.0.2"
  },
  "build": {
    "productName": "Mist React",
    "appId": "org.ethereum.mist.react",
    "asar": false,
    "files": [
      "index.js",
      "*.asar"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage"
      ],
      "category": "WebBrowser"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  }
}
